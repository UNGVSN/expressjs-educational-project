<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
    body { font-family: sans-serif; max-width: 600px; margin: 50px auto; padding: 20px; }
    h1 { color: #333; }
    .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; }
    .user-info { color: #666; }
    form.new-todo { display: flex; gap: 10px; margin-bottom: 20px; }
    form.new-todo input { flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 4px; }
    form.new-todo button { padding: 10px 20px; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer; }
    .todo-list { list-style: none; padding: 0; }
    .todo-item { display: flex; align-items: center; padding: 15px; background: #f5f5f5; margin-bottom: 10px; border-radius: 4px; }
    .todo-item.completed .title { text-decoration: line-through; color: #999; }
    .todo-item .title { flex: 1; }
    .todo-item form { display: inline; }
    .todo-item button { padding: 5px 10px; margin-left: 5px; border: none; border-radius: 4px; cursor: pointer; }
    .todo-item button.toggle { background: #17a2b8; color: white; }
    .todo-item button.delete { background: #dc3545; color: white; }
    .flash { padding: 10px; border-radius: 4px; margin-bottom: 20px; }
    .flash.success { background: #d4edda; color: #155724; }
    .flash.error { background: #f8d7da; color: #721c24; }
    .logout { padding: 5px 10px; background: #6c757d; color: white; border: none; border-radius: 4px; cursor: pointer; }
    .empty { text-align: center; padding: 40px; color: #999; }
    a { color: #007bff; }
  </style>
</head>
<body>
  <div class="header">
    <h1><%= title %></h1>
    <div class="user-info">
      <% if (typeof user !== 'undefined' && user) { %>
        <%= user.username %>
        <form method="POST" action="/logout" style="display: inline;">
          <button type="submit" class="logout">Logout</button>
        </form>
      <% } %>
    </div>
  </div>

  <% if (typeof flash !== 'undefined' && flash) { %>
    <div class="flash <%= flash.type %>"><%= flash.message %></div>
  <% } %>

  <form class="new-todo" method="POST" action="/todos">
    <input type="text" name="title" placeholder="What needs to be done?" required>
    <button type="submit">Add</button>
  </form>

  <% if (todos.length === 0) { %>
    <div class="empty">
      <p>No todos yet. Add one above!</p>
    </div>
  <% } else { %>
    <ul class="todo-list">
      <% todos.forEach(function(todo) { %>
        <li class="todo-item <%= todo.completed ? 'completed' : '' %>">
          <span class="title"><%= todo.title %></span>
          <form method="POST" action="/todos/<%= todo.id %>/toggle">
            <button type="submit" class="toggle">
              <%= todo.completed ? 'Undo' : 'Done' %>
            </button>
          </form>
          <form method="POST" action="/todos/<%= todo.id %>/delete">
            <button type="submit" class="delete">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  <% } %>

  <p><a href="/">‚Üê Back to Home</a></p>
</body>
</html>
